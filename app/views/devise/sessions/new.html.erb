

<div class="container">
        <h2>ログイン</h2>
  <div class="row justify-content-center">
<div class='col-5'>
  
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.label :'メールアドレス' %><br />
          <%= f.email_field :email, autofocus: true, class: "form-control",id:"session_email"%>
        </div>

        <div class="field">
          <%= f.label :'パスワード' %><br />
          <%= f.password_field :password, autocomplete: "off", class: "form-control",id:"session_password"%>
        </div>

        <% if devise_mapping.rememberable? -%>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :'ログイン保存' %>
          </div>
        <% end -%>

        <div class="actions">
          <%= f.submit "ログイン", class: "btn btn-primary"%>
        </div>

      <% end %>

    </div>
  </div><!-- End of row -->
</div>
  
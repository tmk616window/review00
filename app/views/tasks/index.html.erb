<div class='container tasks_index_seach'>

<%= search_form_for @q do |f| %>
    開発言語
    <%=f.text_field :task_pl_cont%>
    採用状況
    <%= f.select :recruit_cont, [['', ''],['新卒', '新卒'], ['中途', '中途'], ['インターン', 'インターン']] %>
    企業形態
    <%= f.select :company_info_cont, [['', ''],['自社開発', '自社開発'], ['受託開発', '受託開発'], ['SES', 'SES']] %>
    <%= f.submit '検索'%>
    
<% end %>
</div>


<div class="task_index">
    
    
        <%@tasks.each do |t|%>
　<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.7.2/Chart.bundle.js"></script>
<div class="container d-flex justify-content-center">
    <div class='tasks_index '>
        <a href="/tasks/<%=t.id%>"></a>
    <div class="tasks_index_image">
        
        <canvas id="chart<%=t.id%>"></canvas>

  <script>
    var ctx = document.getElementById("chart<%=t.id%>");
    var myRadarChart = new Chart(ctx, {
        type: 'radar', 
        data: { 
            labels: ["デザイン", "機能", "企画力", "ユニーク性", "ユーザー視点"],
            datasets: [{
			    label: "ポートフォリオ分析",
                data: [<%=t.design_point%>, <%=t.function_point%>, <%=t.plam_point%>, <%=t.unique_point%>, <%=t.user_perspective_point%>],
                backgroundColor: 'rgba(255,0,0,0.5)',
                borderColor: 'RGBA(225,95,150, 1)',
                borderWidth: 1,
            }, ]
        },
        options: {
            scale:{
                ticks:{
                    suggestedMin: 0,
                    suggestedMax: 5,
                    stepSize: 1,
                }
            }    
        }
    });
  </script>

        
        </div> 
        <div class="tasks_index_form">
        <p>入社方式　　　<%=t.recruit%></p>
        <p>企業情報　　　<%=t.company_info%></p>
        <p>年齢　　　　　<%=t.task_old%>歳</p>
        <p>開発言語　　　<%=t.task_pl%></p>
        </div>
    </div>
    
    
</div>

<%end%>

    
</div>




        
